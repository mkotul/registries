					"title": "Stav klubu",
					"type": "string",
					"required": true
				},
				"notPaying": {
					"title": "Neplatič",
					"type": "string",
					"enum": [
						"Áno",
						"Nie"
					],
					"required": true
				},
				"dateOfRegistration": {
					"title": "Dátum registrácie",
					"type": "string",
					"required": false,
